<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input 
            type="text" 
            value="<%= book.title %>" 
            name="title" 
            class="form-control" 
            id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Description</label>
        <textarea rows="3" name="description" class="form-control" id="inputDesc">
            <%= book.description %>
        </textarea>
    </div>

    <div class="form-group">
        <label for="inputAuth">Authors</label>
        <input type="text" value="<%= book.authors %>" name="authors" class="form-control" id="inputAuth">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>